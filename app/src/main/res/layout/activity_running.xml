<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_running"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ottas70.runningapp.RunningActivity"
    android:background="@color/backgroundPrimary">

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="96dp"
        android:id="@+id/StartButton" />

    <TextView
        android:text="00:00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/timerTextView"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/StartButton"
        android:layout_toStartOf="@+id/StartButton"
        android:textColor="@color/textPrimary" />

    <TextView
        android:text="0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speedTextView"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/timerTextView"
        android:layout_alignBottom="@+id/timerTextView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:textColor="@color/textPrimary" />

    <TextView
        android:text="Speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/speedTextView"
        android:layout_alignLeft="@+id/speedTextView"
        android:layout_alignStart="@+id/speedTextView"
        android:textColor="@color/textPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/distanceEditText"
        android:text="0.00"
        android:textSize="100sp"
        android:gravity="center_vertical|center_horizontal"
        android:padding="1dp"
        android:textColor="@color/textPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="KILOMETERS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/textPrimary"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:layout_below="@+id/distanceEditText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@color/textPrimary"
        android:layout_below="@+id/timerTextView"
        android:layout_alignLeft="@+id/timerTextView"
        android:layout_alignStart="@+id/timerTextView"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />

</RelativeLayout>
