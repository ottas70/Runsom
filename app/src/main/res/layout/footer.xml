<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:background="@color/backgroundPrimary"
    android:layout_height="wrap_content"
    android:id="@+id/footer">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feedButton"
        android:layout_weight="1"
        app:srcCompat="@drawable/feed"
        android:padding="5dp"
        android:layout_gravity="center" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/runner"
        android:id="@+id/runOverviewButton"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_gravity="center" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_map_white_36dp"
        android:id="@+id/economyMapButton"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_gravity="center" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_equalizer_white_36dp"
        android:id="@+id/econonyOverviewButton"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_gravity="center" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_person_white_36dp"
        android:id="@+id/accountButton"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_gravity="center" />
</LinearLayout>