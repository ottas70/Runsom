<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_building_detail_ativity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ottas70.runningapp.Activities.BuildingDetailAtivity"
    android:weightSum="1">

    <include
        android:id="@+id/header"
        layout="@layout/header" />

    <include
        android:id="@+id/footer"
        layout="@layout/footer" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.40"
        android:background="@color/divider_grey"
        android:layout_below="@+id/header"
        android:layout_above="@+id/footer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/backgroundPrimary"
                android:layout_height="300dp">

                <TextView
                    android:text="Otto Vodvářka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/usernameTextView"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:layout_below="@+id/userImageView"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:text="ottas70@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:id="@+id/emailTextView"
                    android:textColor="@color/text_grey2"
                    android:textSize="15sp"
                    android:layout_below="@+id/usernameTextView"
                    android:layout_centerHorizontal="true" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:text="12500"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/moneyTextView"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:text="42"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/runsTextView"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:text="21.5 km"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/distanceTextView"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:text="DOLLARS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView21"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="12sp" />

                        <TextView
                            android:text="RUNS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView20"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView19"
                            android:text="ELAPSED"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="12sp" />
                    </TableRow>

                </TableLayout>

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/user"
                    android:id="@+id/userImageView"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@android:color/white">

                <TextView
                    android:text="PERSONAL INFO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stats"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"
                    android:typeface="monospace" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:text="GENDER"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:text="HEIGHT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:text="WEIGHT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="13sp"
                            android:textStyle="normal|bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:text="Male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@android:color/black"
                            android:id="@+id/genderTextView" />

                        <TextView
                            android:text="174 cm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/heightTextView"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/weightTextView"
                            android:text="63 kg"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@android:color/black" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@android:color/white">

                <TextView
                    android:text="MY BUILDINGS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="22sp"
                    android:typeface="monospace" />

                <ListView
                    android:layout_width="match_parent"
                    android:id="@+id/myBuildingsList"
                    android:layout_height="215dp" />

                <TextView
                    android:text="Load more..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:typeface="monospace"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/loadMore" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
